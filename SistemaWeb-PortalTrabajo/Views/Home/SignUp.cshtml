
@{
	Layout = null;
}


<head>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
	<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

	<link rel="shortcut icon" type="image/png" href="~/icono_principal.png" />

	<link href="~/css/styles.css" rel="stylesheet" />

	<title>Registro - Usuarios</title>


</head>



<body style="background-color: #F8F9FA; display: flex; align-items: center; justify-content: center; min-height: 100vh;">

	<div class="container text-center flex-grow-1">
		<h3 class="well text-center" style="color: mediumseagreen;">
			<i class="fas fa-user-circle" style="margin-right: 10px;"></i> Completa todos los datos solicitados
		</h3>

		<div class="col-lg-12 well">
			<div class="row">
				<form action="@Url.Action("SignUp", "Home")" method="post" enctype="multipart/form-data">
					<div class="col-sm-12">
						<div class="row">
							<div class="col-sm-6 form-group">
								<label>Nombres</label>
								<input type="text" name="nombre" placeholder="Introduce tus nombres" class="form-control" required>
							</div>
							<div class="col-sm-6 form-group">
								<label>Apellidos</label>
								<input type="text" name="apellido" placeholder="Indroduce tus apellidos" class="form-control" required>
							</div>
						</div>

						<div class="row">
							<div class="col-sm-4 form-group">
								<label>Correo</label>
								<input type="email" name="correo" placeholder="Introduce tu correo" class="form-control" required>
							</div>
							<div class="col-sm-4 form-group">
								<label>Contraseña</label>
								<input type="password" name="clave" placeholder="Introduce tu contraseña" class="form-control" required>
							</div>
							<div class="col-sm-4 form-group">
								<label>Telèfono</label>
								<input type="text" name="contacto" placeholder="Introduce tu telèfono" class="form-control" required>
							</div>
						</div>

						<div class="row">
						<div class="col-sm-6 form-group">

							<label>Direcciòn</label>
							<input type="text" name="direccion" placeholder="Introduce tu direciòn" class="form-control" required>
						</div>

							<div class="col-sm-6 form-group" style="margin-top: 10px;">
								<label>Fecha de nacimiento</label>
								<input type="date" id="fechaNacimiento" name="fechaNacimiento" style="margin-top: 7px;" required>
							</div>

						
						</div>
							 
							<div class="col-sm-12 form-group text-center" style="margin-top: 20px;">
								<label>Foto de Perfil</label>
							<input class="form-control-file" type="file" name="foto" style="margin-top: 10px; margin-left: 150px" onchange="readURL(this);" required>

								<div class="form-group">
									<img id="img" for="foto" height="192" width="200" class="border border-dark" style="margin-top: 20px;">
								</div>
							</div>

						@if (TempData["Error"] != null)
						{
							<div class="alert alert-danger" role="alert">
								@TempData["Error"]
							</div>
						}
	
						<button type="submit" class="btn btn-lg btn-primary btn-block mb-5" style="margin-top: 30px; margin-bottom: 20px">Registrarse</button>
					</div>
				</form>
			</div>
		</div>
	</div>

<script>

	function readURL(input) {
		if (input.files && input.files[0]) {
			var reader = new FileReader();

			reader.onload = function (e) {
				$('#img')
					.attr('src', e.target.result)
					.width(200)
					.height(192);
			};

			reader.readAsDataURL(input.files[0]);
		}
	}

</script>

