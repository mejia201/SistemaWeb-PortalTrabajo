@model List<SistemaWeb_PortalTrabajo.Models.Trabajo>
@{
	Layout = null;
	var idUsuario = ViewBag.idUsuario;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="shortcut icon" type="image/png" href="~/icono_principal.png" />

    <title>EmpleoConecta  |  Empleos</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">




    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">



</head>

<body style="background-color: #f2f3f4">

    <main id="main">

        <section id="empleos" class="empleos text-center">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2 class="mt-4">Empleos Encontrados</h2>
                    <p class="d-inline me-2 mt-3">Resultados de la Búsqueda para</p>
                    <h6 class="d-inline fw-bold">" @ViewBag.NombreCategoria "</h6>
                </div>

				<a asp-action="BuscarEmpleo" class="btn btn-outline-primary text-center mt-5 mb-5">Volver</a>


                <div id="contenedor-empleos" class="row text-center">

                    @if (Model.Count > 0)
                    {
                        @foreach (var trabajo in Model)
                        {

                            <div class="col-md-3 mt-3 mb-3">
                                <div class="card border-primary mb-3" style="max-width: 18rem;">
                                    <div class="card-header">
                                        <h5 class="card-title fw-bold text-center mt-2">@trabajo.titulo</h5>
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-subtitle text-muted text-center">@trabajo.ubicacion</h6>
                                        <p class="card-text text-center mt-3">@trabajo.descripcion</p>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item fw-bold text-center">Empresa: @trabajo.Empresa.nombre_empresa</li>
                                            <li class="list-group-item fw-bold text-center">Salario: @trabajo.salario</li>
                                            <li class="list-group-item fw-bold text-center">Fecha Publicación: @trabajo.fechaPublicacion</li>


                                            <li class="list-group-item fw-bold text-center">
                                                Categoria:
                                                @if (trabajo.Categoria != null)
                                                {
                                                    @trabajo.Categoria.nombre
                                                }
                                                else
                                                {
                                                    <span>No categorizado</span>
                                                }
                                            </li>

                                        </ul>
                                        <div class="text-center">
                                            <button class="btn btn-primary mt-4 mb-3 accordion" data-target="#collapse-@trabajo.idTrabajo">Detalle</button>

                                            <form action="@Url.Action("GuardarPostulacion", "Home")" method="post">
                                                <input type="hidden" name="idTrabajo" value="@trabajo.idTrabajo" />
                                                <input type="hidden" class="form-control" name="idUsuario" value="@ViewBag.idUsuario">
                                                <button type="submit" class="btn btn-warning mt-4 mb-3">Postularme</button>
                                            </form>

                                        </div>
                                        <hr>
                                        <div id="collapse-@trabajo.idTrabajo" style="display: none;">
                                            <div class="card-body">
                                                <h5 class="text-center">Información adicional sobre el empleo</h5>
                                                <h6 class="text-center fw-bold mt-3">Requisitos:</h6>
                                                <h6 class="text-center fw-light mb-2">@trabajo.requisitos</h6>

                                                <h6 class="text-center fw-bold">Tipo de Contrato:</h6>
                                                <h6 class="text-center fw-light">@trabajo.tipoContrato</h6>

                                            </div>
                                        </div>

                                    </div>
                                    @if (@trabajo.estado == "Disponible")
                                    {
                                        <div class="card-footer bg-success text-white fw-bold text-center">
                                            @trabajo.estado
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="card-footer bg-danger text-white fw-bold text-center">
                                            @trabajo.estado
                                        </div>
                                    }



                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <p class="mt-5 mb-5">No se encontraron resultados para esta categoria.</p>
                    }


                </div>
            </div>


        </section>

    </main>


    <footer id="footer" class="text-center mt-5">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>EmpleoConecta</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                Designed by <a>EmpleoConecta</a>
            </div>
        </div>
    </footer>

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



    <script>
        $(document).ready(function () {
            $('.accordion').click(function () {
                var target = $(this).data('target');
                $(target).slideToggle();
            });
        });
    </script>


    <script src="assets/js/main.js"></script>



</body>
</html>

