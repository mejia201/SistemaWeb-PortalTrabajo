@{

    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
	<title>Inicio de sesión - Empresas</title>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
	<link rel="shortcut icon" type="image/png" href="~/icono_principal.png" />

	<link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div class="d-flex justify-content-center h-100">
			<div class="card">
				<div class="card-header text-center">
					<h3>Inicia sesión como empresa</h3>
				</div>
				<div class="card-body">
					<form action="@Url.Action("LoginEmpresa", "Home")" method="post">
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" name="correo_empresa" class="form-control" placeholder="Usuario">

						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" name="clave_empresa" class="form-control" placeholder="Contraseña">
						</div>

						@if (ViewData["Mensaje"] != null)
						{
							<div class="alert alert-danger" role="alert">
								@ViewData["Mensaje"]
							</div>
						}

						<div class="form-group text-center">
							<input type="submit" value="Iniciar sesión" class="btn login_btn mt-3">
						</div>
					</form>
				</div>
				<div class="card-footer">
					<div class="d-flex justify-content-center links">
						No tienes una cuenta?<a href="@Url.Action("SignUpEmpresa", "Home")">Regístrate</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>