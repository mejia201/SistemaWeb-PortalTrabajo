@model Usuario
@{

	Layout = null; 


}
<!DOCTYPE html>
<html>

<head>
	<title>Creacion de Curriculum</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="shortcut icon" type="image/png" href="~/icono_principal.png" />
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">


    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

	<link href="~/css/formato.css" rel="stylesheet" />


</head>

<body>


	@if (ViewData["AlertaMensaje"] != null)
	{
		<div class="alert alert-success position-fixed top-0 end-0 translate-middle-x m-3" role="alert">
			@ViewData["AlertaMensaje"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}


    <div class="py-5 text-center container border-bottom">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Bienvenido/a,  @ViewBag.nombre</h1>

                <p class="lead text-body-secondary">En esta pagina podras crear tu curriculum, como ultimo paso para postularte a cualquier empleo de tu preferencia.</p>
        </div>
    </div>
</div>

<div class="py-5 text-center container">

        <h4 class="mb3 text-success">Llena todos los campos que se te solicitan.</h4>

				<div id="curriculumbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-info">
						<div class="panel-heading">
							<div class="panel-title">Curriculum</div>
						</div>
						<div style="padding-top:30px" class="panel-body">

							<div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

					<form id="loginform" class="form-horizontal" role="form" action="@Url.Action("Curriculum", "Home")" method="post">

								<div style="margin-bottom: 25px" class="input-group">
									<span class="input-group-addon"><i class="glyphicon glyphicon-folder-open"></i></span>
									<input type="text" class="form-control" name="titulo_profesional" value="" placeholder="Titulo profesional">
								</div>

								<div style="margin-bottom: 25px" class="input-group">
									<span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
									<input type="text" class="form-control" name="experiencia_laboral" placeholder="Experiencia laboral" required>
								</div>

								<div style="margin-bottom: 25px" class="input-group">
									<span class="input-group-addon"><i class="glyphicon glyphicon-list-alt"></i></span>
									<input type="text" class="form-control" name="educacion" value="" placeholder="Educación" required>
								</div>

								<div style="margin-bottom: 25px" class="input-group">
									<span class="input-group-addon"><i class="glyphicon glyphicon-star"></i></span>
									<textarea name="habilidades" placeholder="Introduce tus Habilidades" rows="3" class="form-control" required></textarea>

								</div>

								<div style="margin-bottom: 25px" class="input-group">
									<span class="input-group-addon"><i class="glyphicon glyphicon-tags"></i></span>
									<textarea name="certificaciones" placeholder="Introduce tus Certificaciones" rows="3" class="form-control" required></textarea>

								</div>


								<div style="margin-top:10px" class="form-group">
									<!-- Button -->

									<div class="col-sm-12 controls">

										<input type="submit" value="Crear Curriculum" class="btn btn-primary mt-3">

									</div>
								</div>
							</form>
				</div>

                </div>
            </div>   

</div>


<footer class="border-top footer text-muted">
        <div class="container">
            <p class="text-black mt-3">EmpleoConecta © 2023<a class="text-color"></a></p>
        </div>
     </footer>



    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


</body>
</html>