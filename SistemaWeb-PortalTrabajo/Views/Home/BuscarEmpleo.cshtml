@model List<SistemaWeb_PortalTrabajo.Models.Categoria>


@{

    Layout = null; 
    var idUsuario = ViewBag.idUsuario;
}

<!DOCTYPE html>
<html>

<head>

    <title>Busqueda de Empleos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="shortcut icon" type="image/png" href="~/icono_principal.png" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

	<link href="~/css/formato.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <link href="~/Theme/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body style="background-color: #f2f3f4">

    @if (ViewBag.MensajeCurriculum != null)
    {
        <div class="alert alert-success position-fixed top-0 end-0 translate-middle-x m-3" role="alert">
            @ViewBag.MensajeCurriculum
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown no-arrow">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">Tú perfil</span>
                            <img src="@Url.Action("MostrarFoto", "Home")" alt="Foto de perfil"
                                 class="rounded-circle profile-image">
                        </a>

                        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                             aria-labelledby="userDropdown">
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#perfilModal">
                                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                Perfil
                            </a>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#editarPerfilModal">
                                <i class="fas fa-address-card fa-sm fa-fw mr-2 text-gray-400"></i>
                                Editar Perfil
                            </a>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#actividadModal">
                                <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                Actividad
                            </a>
                           
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                Cerrar Sesión
                            </a>
							<div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#" data-toggle="modal" data-target="#eliminarCuentaModal">
                                <i class="fas fa-exclamation-triangle fa-sm fa-fw mr-2 text-gray-400"></i>
                                Eliminar Cuenta
                            </a>

                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <style>
        .profile-image {
            width: 40px;
            height: 40px;
            border-radius: 70%;
        }

        .search-button {
            margin-left: 10px;
            margin-top: 1px;
            vertical-align: middle;
        }

        .align-middle {
            vertical-align: middle;
        }

        .profile-image2 {
            width: 200px;
            height: 200px;
            border-radius: 80%;
        }

    </style>


  
<div class="py-5 text-center container border-bottom">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Bienvenido/a,  @ViewBag.nombre</h1>

            <p class="lead text-body-secondary">Luego de crear correctamente el curriculum, En esta página podras buscar empleos y postularte a ellos.</p>


                    @using (Html.BeginForm("Resultados", "Home", FormMethod.Get))
                    {

                    @Html.DropDownList("idCategoria", new SelectList(Model, "idCategoria", "nombre"), "Seleccione una categoría", new { @class = "styled-dropdown align-middle" })
                    <button class="btn btn-primary search-button" type="submit">Buscar</button>
                      
                    }
        </div>
    </div>
</div>



    <div class="modal fade" id="perfilModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Información del Usuario</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body text-center">

                    <img src="@Url.Action("MostrarFoto", "Home")" alt="Foto de perfil"
                         class="profile-image2">

                    @foreach (var perfil in ViewBag.Perfil)
                    {
                        <h5 class="card-subtitle text-muted text-center mt-4">Nombre: @perfil.nombre, @perfil.apellido</h5>
                        <p class="card-text text-center mt-3">Correo: @perfil.correo</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item fw-bold text-center">Dirección: @perfil.direccion</li>
                            <li class="list-group-item fw-bold text-center">Teléfono: @perfil.contacto</li>
                            <li class="list-group-item fw-bold text-center">Creación de la cuenta: @perfil.fechaCreacion</li>
                        </ul>
                    }

                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" type="button" data-dismiss="modal">Salir</button>
                </div>
            </div>
        </div>
    </div>




    <div class="modal fade" id="editarPerfilModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edita información de tu perfil</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">


                    <form id="editarCuentaForm" action="@Url.Action("EditarPerfil", "Home")" method="post" enctype="multipart/form-data">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Nombres</label>
                                    <input type="text" name="nombre" placeholder="Introduce tus nombres" class="form-control">
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Apellidos</label>
                                    <input type="text" name="apellido" placeholder="Indroduce tus apellidos" class="form-control">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Correo</label>
                                    <input type="email" name="correo" placeholder="Introduce tu correo" class="form-control">
                                </div>
                                <div class="col-sm-6 form-group">
                                    <label>Contraseña</label>
                                    <input type="password" name="clave" placeholder="Introduce tu contraseña" class="form-control">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6 form-group">
                                    <label>Telèfono</label>
                                    <input type="text" name="contacto" placeholder="Introduce tu telèfono" class="form-control" >
                                </div>

                                <div class="col-sm-6 form-group">
                                    <label>Direcciòn</label>
                                    <input type="text" name="direccion" placeholder="Introduce tu direciòn" class="form-control">
                                </div>

                            </div>


                            <div class="row">
                                <div class="col-sm-12 form-group" style="margin-top: 10px;">
									<label style="margin-left: 170px">Foto de Perfil</label>
									<input class="form-control-file" type="file" name="foto" onchange="readURL(this);">

									<div class="form-group">
										<img id="img" for="foto" height="192" width="200" class="border border-dark" style="margin-top: 20px; margin-left: 130px">
									</div>
                                </div>

                            </div>

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div id="alerta" class="alert alert-danger" role="alert">
                                    @TempData["ErrorMessage"]
                                </div>
                            }

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div id="alerta" class="alert alert-success" role="alert">
                                    @TempData["SuccessMessage"]
                                </div>
                            }


                            <button type="submit" class="btn btn-primary btn-block mb-5" style="margin-top: 20px;">Editar mi perfil</button>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" type="button" data-dismiss="modal">Cancelar</button>

                </div>
            </div>
        </div>
    </div>




    <div class="modal fade" id="actividadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tus Postulaciones</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                     @if (ViewBag.Postulaciones != null && ViewBag.Postulaciones.Count > 0)
                    {
                        <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="text-center">Empleo</th>
                                    <th scope="col" class="text-center">Empresa</th>
                                    <th scope="col" class="text-center">Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var postulacion in ViewBag.Postulaciones)
                                {
                                <tr>
                                        <td class="text-center">@postulacion.Trabajo.titulo</td>
                                        <td class="text-center">@postulacion.Trabajo.Empresa.nombre_empresa</td>
                                        <td class="text-center" style="background-color: #FFEEBA;">@postulacion.Estado</td>
                                </tr>
                                }
                            </tbody>
 
                        </table>

                    }
                    else
                    {
                         <p class="text-center">No tienes postulaciones</p>
                    }

       
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" type="button" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>




    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Listo para salir ?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Seleccione "Salir" a continuación si desea finalizar la sesión actual.</div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" data-dismiss="modal">Cancelar</button>
                    <a class="btn btn-danger" href="@Url.Action("Logout", "Home")">Salir</a>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="eliminarCuentaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Listo para eliminar tu cuenta ?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Seleccione "Eliminar cuenta" a continuación si desea eliminar la cuenta actual.</div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" data-dismiss="modal">Cancelar</button>
         
                    <form id="eliminarCuentaForm" method="post" action="@Url.Action("EliminarCuenta", "Home")">
                        <button class="btn btn-danger" type="submit">Eliminar cuenta</button>
                    </form>

                </div>
            </div>
        </div>
    </div>


    <script>

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img')
                        .attr('src', e.target.result)
                        .width(200)
                        .height(192);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }


        var alerta = document.getElementById('alerta');

        alerta.style.display = 'block';

        setTimeout(function () {
            alerta.style.display = 'none';
        }, 30000);

    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
	<!-- Bootstrap core JavaScript-->
	<script src="~/Theme/vendor/jquery/jquery.min.js"></script>
	<script src="~/Theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
	<!-- Core plugin JavaScript-->
	<script src="~/Theme/vendor/jquery-easing/jquery.easing.min.js"></script>
	<!-- Custom scripts for all pages-->
	<script src="~/Theme/js/sb-admin-2.min.js"></script>
	<!-- Page level plugins -->
	<script src="~/Theme/vendor/chart.js/Chart.min.js"></script>
	<!-- Page level custom scripts -->
	<script src="~/Theme/js/demo/chart-area-demo.js"></script>
	<script src="~/Theme/js/demo/chart-pie-demo.js"></script>

</body>

</html>